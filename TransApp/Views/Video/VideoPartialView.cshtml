@model IEnumerable<TransApp.Models.Video>

@{
    ViewBag.Title = "GetVideos";
}

<h2>GetVideos</h2>

@Html.ActionLink("Ný þýðing", "AddTranslation", "Video")
<table>
    <thead>
        <tr>
            <th>@Html.ActionLink("Nafn", "OrderByName", "Video")</th>
            <th>Flokkur</th>
            <th>@Html.ActionLink("Dagsetning", "OrderByDate", "Video")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.videoName</td>
                <td>@Html.ActionLink(item.videoCategory, "GetVideoByCategory", new { category = item.videoCategory })</td>
                <td>@item.videoTime</td>
            </tr>
        }
    </tbody>
</table>
