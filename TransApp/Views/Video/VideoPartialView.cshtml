@model PagedList.IPagedList<TransApp.Models.Video>
@using PagedList.Mvc;

@{
    ViewBag.Title = "GetVideos";
}

@Html.ActionLink("Ný þýðing", "AddTranslation", "Video", new { @class = "btn btn-default btn-lg active" })

@using (Html.BeginForm("SearchEngine", "Video", FormMethod.Get, new { @class = "leita" }))
{
    <p>
        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { id = "SearchID" })
        <input type="submit" id="SearchBtnID" value="Search" disabled="disabled" />
    </p>
}
    <ul class="flokkar">
        <li>@Html.ActionLink("Hasar", "GetVideoByCategory", new { category = "Hasar" })</li>
        <li>@Html.ActionLink("Rómantík", "GetVideoByCategory", new { category = "Rómantík" })</li>
        <li>@Html.ActionLink("Ævintýra", "GetVideoByCategory", new { category = "Ævintýra" })</li>
    </ul>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.ActionLink("Nafn", "OrderByName", "Video")</th>
            <th>Flokkur</th>
            <th>@Html.ActionLink("Dagsetning", "OrderByDate", "Video")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.videoName, "GetTranslationsByVideoId", new { id = item.ID })</td>
                <td>@Html.ActionLink(item.videoCategory, "GetVideoByCategory", new { category = item.videoCategory })</td>
                <td>@item.videoTime</td>
            </tr>
        }
    </tbody>
</table>
