
@Html.ActionLink("Ný beiðni", "CreateUserRequest", null, new { @class = "btn btn-default btn-lg active" })

    <table class="table table-hover">
        <thead>
            <tr>
                <th>@Html.ActionLink("Nafn", "OrderRequestsByName", "UserRequest", new { @class = "reqheader" })</th>
                <th>LIKE</th>
                <th>@Html.ActionLink("Tungumál", "OrderRequestsByLanguage", "UserRequest", new { @class = "reqheader" })</th>
                <th>@Html.ActionLink("Dagsetning", "OrderRequestsByDate", "UserRequest", new { @class = "reqheader" })</th>
                <th>@Html.ActionLink("Atkvæði", "OrderRequestsByLikes", "UserRequest", new { @class = "reqheader" })</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink((string)item.requestName, "GetUserRequestById", new { id = item.ID })</td>
                    <td>@Html.ActionLink("Like", "LikeRequest", new { reqId = item.ID })</td>
                    <td>@item.requestLanguage</td>
                    <td>@item.requestTime</td>
                    <td>@item.likes</td>
                </tr>
            }
        </tbody>
    </table>
