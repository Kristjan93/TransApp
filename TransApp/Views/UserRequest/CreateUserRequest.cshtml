@model TransApp.Models.UserRequest

@using (Html.BeginForm())
{

     <fieldset>

    @Html.AntiForgeryToken()

   

    <div class="form-horizontal">
        <h2>Settu inn nýja beiðni</h2>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.requestName, "Nafn beiðni", new { @class="control-lable col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.requestName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.requestName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.requestText, "Lýsing á beiðni", new { @class = "control-lable col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.requestText, new {  @rows="3", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.requestText)
            </div>
        </div>

        <div class="hidden">
            @Html.LabelFor(model => model.requestTime, new { @class = "control-lable col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.requestTime)
                @Html.ValidationMessageFor(model => model.requestTime)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.requestLanguage, "Tungumál", new { @class = "control-lable col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.requestLanguage, ViewBag.requestLanguage as List<SelectListItem>, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.requestLanguage)
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Vista" class="btn btn-default" />
            </div>
        </div>
    </div>
    
    </fieldset>
}
